@{
    ViewBag.Title = "Sửa Tài Khoản";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}

@using QuanLyKhachSan.Models.Entities
@model TaiKhoan

<script>
    var element = document.getElementById("collapse1");
    element.classList.add("in");
</script>

<h2 style="text-align:center">Sửa Tài Khoản</h2>

<div class="container admin-sua-thong-tin">
    <form action="" method="post">
        <div class="form-group">
            <label>Tài Khoản:</label>
            <input class="form-control dang-nhap-text" type="text" name="TenTaiKhoan" value="@Model.TenTaiKhoan" readonly />
        </div>
        <div class="form-group">
            <label>Mật Khẩu:</label>
            <input class="form-control dang-nhap-text" type="password" name="MatKhau" value="@Model.MatKhau" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.MatKhau)</span>
        </div>
        <div class="form-group">
            <label>Họ Tên:</label>
            <input class="form-control dang-nhap-text" type="text" name="HoTen" value="@Model.HoTen" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.HoTen)</span>
        </div>
        <div class="form-group">
            <label>SĐT:</label>
            <input class="form-control dang-nhap-text" type="tel" name="SoDienThoai" value="@Model.SoDienThoai" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.SoDienThoai)</span>
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input class="form-control dang-nhap-text" type="email" name="Email" value="@Model.Email" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.Email)</span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.LaAdmin, new { @class = "checkbox" }) Là Admin
                </label>
            </div>
        </div>
        <div class="form-group">
            <input class="btn btn-default" type="submit" value="Cập Nhật" />
        </div>
    </form>
</div>

