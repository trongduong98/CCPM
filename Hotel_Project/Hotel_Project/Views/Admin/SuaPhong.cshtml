@{
    ViewBag.Title = "Sửa Phòng";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}

@using QuanLyKhachSan.Models.Entities
@model Phong

<script>
    var element = document.getElementById("collapse3");
    element.classList.add("in");
</script>

<h2 style="text-align:center">Sửa Phòng</h2>

<div class="container admin-sua-thong-tin">
    <form action="" method="post">
        <div class="form-group">
            <label>Mã Phòng:</label>
            <input class="form-control dang-nhap-text" type="text" name="MaPhong" value="@Model.MaPhong" readonly />
        </div>
        <div class="form-group">
            <label>Tên Phòng:</label>
            <input class="form-control dang-nhap-text" type="text" name="TenPhong" value="@Model.TenPhong" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.TenPhong)</span>
        </div>
        <div class="form-group">
            <label>Diện Tích:</label>
            <input class="form-control dang-nhap-text" type="number" name="DienTich" value="@Model.DienTich" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.DienTich)</span>
        </div>
        <div class="form-group">
            <label>Giá Thuê:</label>
            <input class="form-control dang-nhap-text" type="number" name="GiaThue" value="@Model.GiaThue" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.GiaThue)</span>
        </div>
        <div class="form-group">
            <label>Loại Phòng:</label>
            <select class="form-control dang-nhap-text admin-gia-thue" name="MaLoai">
                @foreach (LoaiPhong lp in (List<LoaiPhong>)ViewBag.listLoaiPhong)
                {
                    <option>@lp.MaLoai</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input class="btn btn-default" type="submit" value="Cập Nhật" />
        </div>
    </form>
</div>

